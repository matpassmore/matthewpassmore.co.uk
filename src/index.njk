      {% for problem in home.services %}
      <li class="[ o-stack ] [ max-w-short ]">
        <h3>{{ problem.title }}</h3>
        {{ problem.desc | markdownFilter | safe }}
      </li>
      {% endfor %}
    </ol>
  </div>
