---
layout: layouts/base.njk
controller: home
---

<!-- INTRO -->
<div class="c-home-intro">
  <h1>{{ home.strapline | safe }}</h1>
</div><!-- .c-home-intro -->


<!-- PROBLEMS -->
<div class="c-home-problems">
  <h2>How I can help your business </h2>
  <ul class="list-reset">
    {% for problem in home.problems %}
    <li>
      <h3>{{ problem.title }}</h3>
      {{ problem.desc | markdownFilter | safe }}
    </li>
    {% endfor %}
  </ul>
</div><!-- .c-home-problems -->


<!-- SERVICES -->
<div class="c-home-services">
  <h2>How I help businesses thrive</h2>
  <ol class="list-reset">
    {% for service in home.services %}
    <li>
      <h3>{{ service.title }}</h3> 
      {{ service.desc | markdownFilter | safe }}
    </li>
    {% endfor %}
  </ol>
</div><!-- .c-home-services -->


<!-- CLIENTS -->
<div class="c-home-clients">
  <h2>Trusted to deliver successful projects</h2>
  <ul class="list-reset">
    {% for client in home.clients %}
    <li><img src="/images/{{ client.logo }}" alt="{{ client.name }}"></li>
    {% endfor %}
  </ul>
</div><!-- .c-home-clients -->
