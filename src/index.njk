---
layout: layouts/base.njk
controller: home
---

<!-- INTRO -->
<div class="[ c-home-intro ] [ py-900 ]">
  <h1 class="[ mx-auto py-400 ] [ text-900 leading-none ]">{{ home.strapline | safe }}</h1>
  <div class="[ max-w-compact mx-auto ] [ text-500 leading-tight ]">
    {{ site.intro | markdownFilter | safe }}
  </div>
</div><!-- .c-home-intro -->


<!-- CLIENTS -->
<div class="[ c-home-clients ] [ mt-600 ]">
  <h2 class="visually-hidden">Clients</h2>
  <ul class="list-reset">
    {% for client in home.clients %}
    <li><img src="/images/{{ client.logo }}" alt="{{ client.name }}" width="200"></li>
    {% endfor %}
  </ul>
</div><!-- .c-home-clients -->

{#
