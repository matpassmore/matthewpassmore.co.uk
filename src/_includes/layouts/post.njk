---
layout: layouts/base.njk
---

<article class="c-post">
  <header>
    <h1>{{ title }}</h1>
    <time datetime="{{ date | w3DateFilter }}">{{ date | dateFilter }}</time>
    <p class="c-tags">
      {% for tag in noteTags %}<a href="/notes/tags/{{ tag | slug }}">{{ tag }}</a>{% endfor %}
      {% for tag in linkTags %}<a href="/links/tags/{{ tag | slug }}">{{ tag }}</a>{% endfor %}
    </p>
  </header>
  {{ content | safe }}
</article>
