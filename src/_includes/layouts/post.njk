---
layout: layouts/base.njk
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <time datetime="{{ date | w3DateFilter }}">{{ date | dateFilter }}</time>
    <p>
      <b>Tags:</b> 
      {% for tag in tags %}
        <a href="/tags/{{ tag | slug }}">{{ tag }}</a>
      {% endfor %}
    </p>
  </header>
  {{ content | safe }}
  <footer>
    <b>Tags:</b> 
    {% for tag in tags %}
      <a href="/tags/{{ tag | slug }}">{{ tag }}</a>
    {% endfor %}
  </footer>
</article>
