---
layout: layouts/base.njk
title: Tag Archive
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag }}/
---

<h1 class=c-page-heading>Tag archive</h1>

{% for post in collections[tag] | reverse %}
  <article class="c-tease">
    <h2 class="c-tease__heading">
      <a href="{{ post.url }}">{{ post.data.title }}</a>
    </h2>
    <p class="c-tease__meta [ margin-top:none ]">
      <time datetime="{{ post.date | w3DateFilter }}">{{ post.date | dateFilter }}</time>
      <b>Tags:</b>
      {% set comma = joiner() %}
      {% for tag in post.data.tags %}{{ comma() }} <a href="/tags/{{ tag | slug }}">{{ tag }}</a>{% endfor %}
    </p>
  </article><!-- .c-tease -->
{% endfor %}
