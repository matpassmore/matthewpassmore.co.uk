    <a href="/notes/tags/{{ tag | slug }}/">
      {% if noteTag == tag %}<strong>{% endif %}{{ tag | lower }}{% if noteTag == tag %} ‚¨Ö</strong>{% endif %}
    </a> 
  {% endfor %}
</em>


